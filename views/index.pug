doctype html
head
    title Ac-News
    style 
        include ../static/style.css

body
    nav#navbar 
        ul 
            li 
                a(href='#ac-news') Ac-News
            li 
                a.active(href='#home') Home
            li 
                a(href='#news') News
            li 
                a(href='#about') About
            li 
                a(href='#contact') Contact

    section#sec1    
        ol 
            each val in postList  
                li <b>#{val.title}</b> (Category :-#{val.category})
                    <br>  
                    | #{val.description} 
                    <br>
                    a.link(href=`${val.url}`) Read More...
                    | <i>Published by #{val.author} at #{val.published} </i>
                <br>
