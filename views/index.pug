doctype html
head
    title Ac-News
    style 
        include ../static/style.css
    script 
        include ../static/client.js
  
    body
        nav#navbar 
            ul 
                li 
                    a(href='#ac-news') Ac-News
                li 
                    a.active(href='#home') Home
                li 
                    a(href='#news') News
                li 
                    a(href='#about') About
                li 
                    a(href='#contact') Contact

    section#sec1
        ul#ul1
            each val in results
                li#li1 <b>#{val.title}</b> (Category :-#{val.category})
                    <br>  
                    | #{val.description} 
                    <br>
                    a.link(href=`${val.url}`) Read More...
                    | <i>Published by #{val.author} at #{val.published_at}#{val.published}</i>
                    a(href="?p=1")
                <br>
                  
    div.loadmore
        button(type='button' onclick="getData(this)")
            | Load More
