extends layout.pug

block append styles
  link(rel="stylesheet" href="../static/style.css")
  link(rel="stylesheet" href="../static/main.css")

block scripts
  script(src='../static/client.js')

block content
  section#sec1
    ul#ul1
      each val in doc
        li#li1 <b>#{val.title}</b> (Category :-#{val.category})
          <br>
          | #{val.description}
          <br>
          a.link(href=`${val.url}`) Read More...
          | <i>Published by #{val.author} at #{val.published_at}#{val.published}</i>
        <br>

  div.loadmore
    a( id="myAnchor" href="?p="+(Number(page)+1) onclick="getData(event);") Load More
