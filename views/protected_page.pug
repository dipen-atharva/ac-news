extends layout.pug

block append styles
  link(rel="stylesheet" href="../static/style.css")
  link(rel="stylesheet" href="../static/form.css")
  link(rel="stylesheet" href="../static/main.css")

block scripts
  script(src='../static/form.js')

block content
  body
    nav#navbar
      ul
        li
          p#logo Ac-News
        li
          a.active(href='/') Home
        li
          a(href='/protected_page') Upload News
        li
          a(href='#contact') Contact
        li.nav-right
          a(href='/logout') Log In/Out

  section#sec1
    form(action='/formdata' method= 'POST' id="myForm")
      table#table
        tr
          td.tdLabel
            label.label Enter Title :
          td#title
            input(type='text' name='title' value=''  required)
        tr
          td.tdLabel
            label.label Enter Category :
          td#category
            input(type='text' name='category' value=''  required)
        tr
          td.tdLabel
            label.label Enter URL:
          td#url
            input(type='text' name='url'  required)
        tr
          td.tdLabel
            label.label Enter Description :
          td#desc
            textarea(name="description" cols="35" rows="5" required)
        tr
          td(colspan='2')
            button#submit(type='reset' onclick="getFormData();") Submit
          td(colspan='2')
            button#reset(type='reset') Reset



